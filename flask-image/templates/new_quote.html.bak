{% extends 'base.html' %}

{% block head %}
    <link rel="stylesheet" href="{{ url_for('static', filename='taggle.css')}}">
    <script src="{{ url_for('static', filename='taggle.js')}}"></script>
     {{ simplemde.css }}
       {{ simplemde.js }}
       <style>
    .codeMirror-scroll{
        height: 100%;
        min-height: 60%;
    }
</style>
 
{% endblock %}

{% block content %}
<div class="container">
    <div class="row">
        <div class="col-lg-8">
            <div class="form-wrapper">
                <h1 class="mt-4">Request New Quote</h1>
                <hr>
                <form method="POST" id="quoteform" action="new_quote" enctype="multipart/form-data">
                    {{ form.csrf_token }}
                    <fieldset class="form-field">
                        {{ form.title.label}}
                        {{ form.title(size=20) }}
                    </fieldset>
                    <hr>
                    <fieldset class="form-field">
                        <div id="example2"></div>
                    </fieldset>
                    <hr>
                    <fieldset class="form-field">
                        {{ form.feature_image.label}}
                        {{ form.feature_image }}
                    </fieldset>
                </form>
            </div>
	    </div>
         <div class="col-lg-8">
         <textarea id="contentcode"></textarea>
             <hr>
             <button class="btn btn-outline-success my-2 my-sm-0" id="upload">Submit</button>
             <hr>
             <br>
             <br>
             <br>
             <br>
        </div>
    </div>

</div>
{% endblock %}